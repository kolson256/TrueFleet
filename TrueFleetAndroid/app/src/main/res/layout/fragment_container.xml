<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:columnCount="2"
    tools:ignore="UselessParent">


    <TextView
        android:id="@+id/container_description"
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_gravity="start|fill_horizontal"
        android:text="ContainerDescription"
        style="@style/Header"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Volume"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_volume"
        android:text="0"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Length"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_length"
        android:text="0"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Width"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_width"
        android:layout_width="0dp"
        android:text="0"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Height"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_height"
        android:layout_width="0dp"
        android:text="None"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Weight"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_weight"
        android:layout_width="0dp"
        android:text="None"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />

    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Notes"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/container_notes"
        android:layout_width="0dp"
        android:text="None"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />

</GridLayout>