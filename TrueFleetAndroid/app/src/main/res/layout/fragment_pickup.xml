<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:columnCount="2"
    tools:ignore="UselessParent">


    <TextView
        android:id="@+id/pickup_name"
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_gravity="start|fill_horizontal"
        android:text="Name"
        style="@style/Header"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Address"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/pickup_address"
        android:lines="2"
        android:autoLink="map"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        android:text="None"
        style="@style/RowValue"
        />

    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Phone"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/pickup_phone"
        android:autoLink="phone"
        android:text="None"
        android:layout_width="0dp"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />
    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Notes"
        style="@style/RowTitle"
        />
    <TextView
        android:id="@+id/pickup_notes"
        android:layout_width="0dp"
        android:text="None"
        android:layout_gravity="start|center_vertical|fill_horizontal"
        style="@style/RowValue"
        />


</GridLayout>